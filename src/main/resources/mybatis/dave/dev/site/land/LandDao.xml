<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="landDao">

    <select id="selectLand" parameterType="LandVo" resultType="LandVo">
        <![CDATA[
        SELECT *
        FROM    LANDS
        WHERE   LAND_SQ = #{landSq}
        ]]>
    </select>

    <select id="selectLandBySq" parameterType="int" resultType="LandVo">
        <![CDATA[
        SELECT *
        FROM    LANDS
        WHERE   LAND_SQ = #{landSq}
        ]]>
    </select>

    <select id="selectLandList" parameterType="LandVo" resultType="LandVo">
        <![CDATA[
        SELECT *
        FROM    LANDS
        WHERE   SALE_STATE = "SALE"
        ]]>
    </select>
    <!--TODO : enum 을 통한 where 조건절 삽입 방법???
    WHERE   SALE_STATE = #{saleState}-->

    <insert id="insertLand" parameterType="LandVo" useGeneratedKeys="true" keyProperty="landSq" keyColumn="LAND_SQ">
        INSERT INTO LANDS
            (
                SALE_TYPE,
                ADDRESS,
                BUILDING_NAME,
                BUILDING_NUMBER,
                AREA,
                PRICE,
                FLOOR,
                FLOOR_SIZE,
                ROOM_COUNT,
                BATHROOM_COUNT,
                LIVEABLE_DATE,
                MEMO,
                SALESMAN,
                SALESMAN_CONTACT,
                SALE_STATE
            )
        VALUES
            (
                #{saleType},
                #{address},
                #{buildingName},
                #{buildingNumber},
                #{area},
                #{price},
                #{floor},
                #{floorSize},
                #{roomCount},
                #{bathroomCount},
                STR_TO_DATE(#{liveableDate}, '%Y-%m-%d'),
                #{memo},
                #{salesman},
                #{salesmanContact},
                #{saleState}
            )
    </insert>

</mapper>
